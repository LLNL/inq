if [[ "$*" == *-c* ]]
then
    #we are just compiling
    cxx="@CMAKE_CXX_COMPILER@"
    ldflags=""
    libs=""
else
    #we are linking too
    cxx="@CMAKE_CXX_COMPILER@"
    ldflags="@CMAKE_EXE_LINKER_FLAGS@ -L@PROJECT_BINARY_DIR@/src/"
    libs="-linq @Libxc_LIBRARIES@ @LAPACK_LIBRARIES@ @BLAS_LIBRARIES@ @INQ_CUDA_LIBRARIES@ @Boost_LIBRARIES@ @FFTW_LIBRARIES@ @CMAKE_CXX_STANDARD_LIBRARIES@"
fi

cxxflags="@CMAKE_CXX_FLAGS@                      
  -I@Libxc_INCLUDE_DIRS@                         \
  -I@Boost_INCLUDE_DIRS@                         \
  -I@FFTW_INCLUDE_DIRS@                          \
	-I@PROJECT_BINARY_DIR@/                        \
	-I@PROJECT_BINARY_DIR@/external_libs/pseudopod \
	-I@PROJECT_SOURCE_DIR@/src/                    \
	-I@PROJECT_SOURCE_DIR@/external_libs/"

command_line="$cxx $cxxflags $ldflags $* ${libs//;/ }"

echo $command_line && $command_line
