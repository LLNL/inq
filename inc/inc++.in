#!/bin/bash
base=$(basename "$1" .cpp)
compile="@CXX@ @CXXFLAGS@                    \
	-I@abs_builddir@/../                       \
	-I@abs_top_srcdir@/src/                    \
	-I@abs_top_srcdir@/external_libs/          \
	-DSHARE_DIR=\"@prefix@/share/inq\"         \
	-DPREFIX_DIR=\"@prefix@\"                  \
  $1 -c -o $base.o"
  
link="@CXXLD@ @CXXFLAGS@ @LDFLAGS@ $base.o -o $base -L@prefix@/lib -linq @LIBS_LAPACK@ @LIBS_BLAS@ @LIBS_CUDA@ @LIBS@"

echo $compile && $compile && echo $link && $link
